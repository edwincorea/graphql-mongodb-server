{
	"name": "client",
	"version": "0.1.0",
	"private": true,
	"keywords": [
		"graphql",
		"mongodb",
		"express",
		"react",
		"boilerplate",
		"server"
	],
	"author": "Leonardo Maldonado <leonardomso11@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"react": "^16.5.2",
		"react-dom": "^16.5.2",
		"react-scripts": "^2.0.3",
		"styled-components": "^3.4.10"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"lint": "eslint . --ext .js,.jsx",
		"format": "npm run prettier -- --write",
		"prettier": "prettier \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|graphql|mdx)\""
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"parserOptions": {
			"ecmaFeatures": {
				"jsx": true
			},
			"ecmaVersion": 2018,
			"sourceType": "module"
		},
		"plugins": [
			"react"
		],
		"extends": [
			"react-app"
		],
		"rules": {
			"indent": [
				"error",
				"tab"
			],
			"linebreak-style": [
				"error",
				"windows"
			],
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"warn",
				"never"
			],
			"no-console": "off",
			"no-unused-vars": "warn",
			"no-restricted-globals": "off",
			"react/jsx-uses-react": "error",
			"react/jsx-uses-vars": "error"
		},
		"env": {
			"browser": true,
			"node": true
		}
	},
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": false,
		"jsxBracketSameLine": false,
		"printWidth": 80,
		"proseWrap": "always",
		"semi": false,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"devDependencies": {
		"eslint": "^5.8.0",
		"eslint-config-prettier": "^3.1.0",
		"prettier": "^1.15.1"
	}
}
