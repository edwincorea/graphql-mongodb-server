{
	"name": "graphql-mongodb-server",
	"version": "1.0.0",
	"description": "A GraphQL MongoDB server.",
	"main": "index.js",
	"scripts": {
		"start": "node server.js",
		"server": "nodemon --exec babel-node index.js",
		"client": "npm start --prefix client",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"lint": "eslint . --ext .js",
		"format": "npm run prettier -- --write",
		"prettier": "prettier \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|graphql|mdx)\""
	},
	"keywords": [
		"graphql",
		"mongodb",
		"express",
		"react",
		"boilerplate",
		"server"
	],
	"author": "Leonardo Maldonado <leonardomso11@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"@babel/cli": "^7.1.5",
		"@babel/core": "^7.1.5",
		"@babel/plugin-proposal-object-rest-spread": "^7.0.0",
		"@babel/plugin-transform-arrow-functions": "^7.0.0",
		"@babel/plugin-transform-async-to-generator": "^7.1.0",
		"@babel/preset-env": "^7.1.5",
		"@babel/preset-stage-2": "^7.0.0",
		"body-parser": "^1.18.3",
		"concurrently": "^4.0.1",
		"cors": "^2.8.5",
		"express": "^4.16.4",
		"express-graphql": "^0.7.1",
		"graphql": "^14.0.2",
		"graphql-tools": "^4.0.3",
		"merge-graphql-schemas": "^1.5.7",
		"mongoose": "^5.3.10",
		"nodemon": "^1.18.6",
		"promise": "^8.0.2"
	},
	"devDependencies": {
		"@babel/node": "^7.0.0",
		"babel-eslint": "^10.0.1",
		"eslint": "^5.8.0",
		"eslint-config-prettier": "^3.1.0",
		"prettier": "^1.15.1"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"parserOptions": {
			"ecmaVersion": 2018
		},
		"extends": [
			"eslint:recommended",
			"eslint-config-prettier"
		],
		"rules": {
			"no-console": "off"
		},
		"env": {
			"browser": true,
			"node": true
		}
	},
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": false,
		"jsxBracketSameLine": false,
		"printWidth": 80,
		"proseWrap": "always",
		"semi": false,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true
	}
}
